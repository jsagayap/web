<style>
  section {
    background-color: rgba(68, 34, 0, .0175);
  }
  .content {
    max-width: 1100px;
    margin: 0 auto;
  }
  .content-area {
    padding: 4rem 0 5rem;
    box-sizing: border-box;
  }
  @media screen and (max-width: 1310px) {
    .content-area {
      width: 100%;
      padding: 4rem 2rem 5rem;
    }
  }
  @media screen and (max-width: 768px) {
    .content,
    .demo {
      width: 100%;
    }
    .content-area {
      padding: 3rem 2rem;
    }
  }
  .description {
    line-height: 1.75;
  }
  .contact {
    display: flex;
    gap: 1.5rem;
    margin: 2rem 0 1rem;

    a {
      color: inherit;
      opacity: .5;
      text-decoration: none;
      position: relative;
      transition: opacity .25s;

      &:hover {
        opacity: .75;
      }
      &::before {
        content: attr(aria-label);
        position: absolute;
        left: 50%;
        transform: translateX(-50%) scale(0);
        white-space: nowrap;
        padding: .25rem .5rem;
        bottom: 2.5rem;
        background-color: rgba(255, 255, 255, .5);
        border: 1px solid rgba(0, 0, 0, .125);
        backdrop-filter: blur(64px);
        filter: blur(8px);
        opacity: 0;
        font-size: .75rem;
        font-weight: bold;
        box-shadow: 0 2px 8px rgba(0, 0, 0, .075);
        transition: all .25s cubic-bezier(0.075, 0.82, 0.165, 1);
        transform-origin: bottom center;
      }
      &:hover::before {
        transform: translateX(-50%) scale(1);
        filter: blur(0);
        opacity: 1;
      }
    }
  }
  hr {
    border-top: 1px solid rgba(0, 0, 0, .0375);
    border-bottom: 0;
    margin: 1.5rem 0;
  }
</style>