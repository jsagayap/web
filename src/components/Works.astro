---
import works from "../data/works.json";
import WorkCard from "./WorkCard.astro";
import Button from "./Button.astro";
---

<section>
  <div class="works" id="works">
    <h1>Projects</h1>
    <div class="works-area">
      {
        works.map((work) => (
          work.link != "" ?
          <a href={work.link} class="work-wrapper">
            <WorkCard
              title={work.title}
              description={work.description}
              alt={work.alt}
              tags={work.tags}
              year={work.year}
              link={work.link}
              imagePath={"../assets/works/" + work.image}
            ></WorkCard>
          </a> :
          <div class="work-wrapper">
            <WorkCard
              title={work.title}
              description={work.description}
              alt={work.alt}
              tags={work.tags}
              year={work.year}
              link={work.link}
              imagePath={"../assets/works/" + work.image}
            ></WorkCard>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .works {
    max-width: 1100px;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    margin: 0 auto;
    padding: 4rem 0;
    box-sizing: border-box;
  }
  @media screen and (max-width: 1310px) {
    .works {
      width: 100%;
      padding: 5rem 2rem
    }
  }
  @media screen and (max-width: 768px) {
    .works {
      padding: 2rem;
    }
  }
  h1 {
    font-size: 1.75rem;
    margin: 0;
  }
  .works-area {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    margin-top: 2rem;
    gap: 2.5rem;
  }
  @media screen and (max-width: 768px) {
    .works-area {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
  }
  .work-wrapper {
    color: inherit;
    text-decoration: none;
  }
</style>