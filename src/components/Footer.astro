---
import Link from "./Link.astro";
import links from "../data/links.json";
---

<footer>
  <div class="footer">
    <div class="footer-notice">
      <p>Â© 2025 jsagayap</p>
      <p>Â·</p>
      <p>Handcrafted with <Link href="https://astro.build" bold={true}>Astro</Link>ðŸš€</p>
    </div>
    <div class="footer-links">
      <Link href={links["mail"].link} label={links["mail"].label}>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d={links["mail"].icon}/></svg>
      </Link>
      <Link href={links["github"].link} label={links["github"].label}>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d={links["github"].icon}/></svg>
      </Link>
      <Link href={links["linkedin"].link} label={links["linkedin"].label}>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d={links["linkedin"].icon}/></svg>
      </Link>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: rgba(0, 0, 0, .0175);
  }
  .footer {
    max-width: 1100px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 auto;
    padding: 3rem 0;
    font-size: .75rem;
  }
  .footer-notice {
    display: flex;
    align-items: center;
    gap: .5rem;
  }
  .footer-links {
    display: flex;
    gap: 1.5rem;
    opacity: .75;
  }
  p {
    opacity: .75;
    margin: 0;
  }
  @media screen and (max-width: 1310px) {
    .footer {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }
  @media screen and (max-width: 768px) {
    .footer {
      flex-direction: column-reverse;
      gap: 1.5rem;
    }
  }
</style>