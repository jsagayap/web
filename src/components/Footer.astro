    margin: 0 auto;
    padding: 3rem 0;
    font-size: 0.75rem;
  }
  .footer-notice {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .footer-links {
    display: flex;
    gap: 1.5rem;
  }
  p {
    opacity: 0.75;
    margin: 0;
  }
  @media screen and (max-width: 1310px) {
    .footer {
      padding-left: 2rem;
      padding-right: 2rem;
      box-sizing: border-box;
    }
  }
  @media screen and (max-width: 768px) {
    .footer {
      flex-direction: column-reverse;
      gap: 1.5rem;
    }
  }
</style>
