<style>
  section {
    background-color: rgba(0, 0, 0, .0375);
  }
  .contact-container {
    display: flex;
    max-width: 1100px;
    margin: 0 auto;
  }
  .contact-area {
    width: 50%;
    padding: 4rem 4rem 4rem 0;
    box-sizing: border-box;
  }
  .contact-area:nth-child(1) {
    border-right: 1px solid rgba(0, 0, 0, .05);
  }
  .contact-area:nth-child(2) {
    padding: 4rem 0 4rem 4rem;
  }
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }
  h1 {
    font-size: 2rem;
    margin: 0;
  }
  input,
  textarea {
    background-color: rgba(0, 0, 0, .05);
    font-family: inherit;
    font-size: 1rem;
    width: 100%;
    padding: 1rem 1.25rem;
    border: 0;
    border-radius: .75rem;
    box-sizing: border-box;
    outline: 0;
    transition: box-shadow .25s;

    &:focus {
      box-shadow: 0 0 0 2px #dab1b1, 0 0 0 4px rgba(218, 177, 177, .5);
    }
    &::placeholder {
      opacity: .5;
    }
    &:focus::placeholder {
      opacity: .75;
    }
  }
  textarea {
    resize: none;
  }
  button {
    padding: 1rem 1.5rem 1rem 1.5rem;
    display: flex;
    width: fit-content;
    text-decoration: none;
    border: 0;
    border-radius: .75rem;
    background-color: rgba(0, 0, 0, .0375);
    color: inherit;
    font-family: inherit;
    font-size: 1rem;
    font-weight: 600;
    text-align: center;

    &:hover {
      background-color: rgba(0, 0, 0, .05);
    }
  }
  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }
  .contact-link {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .contact-link > a {
    color: inherit;
    text-decoration: none;
    transition: opacity .25s;

    &:hover {
      opacity: .5;
    }
  }
  .contact-links svg {
    opacity: .5;
  }
  @media screen and (max-width: 1310px) {
    .contact-area {
      width: 100%;
      padding-left: 2rem;
    }
  }
  @media screen and (max-width: 768px) {
    .contact-container {
      flex-direction: column;
    }
    .contact-area:nth-child(1) {
      border-right: 0;
      border-bottom: 1px solid rgba(0, 0, 0, .05);
    }
    .contact-area:nth-child(1),
    .contact-area:nth-child(2) {
      padding: 3rem 2rem;
    }
  }
  .description {
    line-height: 1.75;
  }
</style>