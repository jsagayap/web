---
import Link from "./Link.astro";
import links from "../data/links.json";
---

<section>
  <div class="contact-container" id="contact">
    <div class="contact-area">
      <h1>Get in touch ‚úâÔ∏è</h1>
      <form method="POST" action="/success" class="contact-form">
        <div class="form-control">
          <input type="text" placeholder="Name" name="name" required>
        </div>
        <div class="form-control">
          <input type="email" placeholder="Email address" name="email" required>
        </div>
        <div class="form-control">
          <textarea placeholder="Your message" rows="5" name="message" required></textarea>
        </div>
        <div class="submit-wrapper">
          <button type="submit">Send message</button>
        </div>
      </form>
    </div>
    <div class="contact-area">
      <h1>Links üîó</h1>
      <div class="contact-links">
        <div class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d={links["email"].icon}/></svg>
          <Link href={links["email"].link} label={links["email"].label} bold={false}>{links["email"].short}</Link>
        </div>
        <div class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d={links["github"].icon}/></svg>
          <Link href={links["github"].link} label={links["github"].label} bold={false}>{links["github"].short}</Link>
        </div>
        <div class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d={links["bluesky"].icon}/></svg>
          <Link href={links["bluesky"].link} label={links["bluesky"].label} bold={false}>{links["bluesky"].short}</Link>
        </div>
        <div class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d={links["linkedin"].icon}/></svg>
          <Link href={links["linkedin"].link} label={links["linkedin"].label} bold={false}>{links["linkedin"].short}</Link>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    background-color: rgba(68, 34, 0, .0375);
  }
  .contact-container {
    display: flex;
    max-width: 1100px;
    margin: 0 auto;
  }
  .contact-area {
    width: 50%;
    padding: 4rem 4rem 4rem 0;
    box-sizing: border-box;

    &:nth-child(1) {
      border-right: 1px solid rgba(68, 34, 0, .075);
    }
    &:nth-child(2) {
      padding: 4rem 0 4rem 4rem;
    }
  }
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }
  h1 {
    font-size: 2rem;
    margin: 0;
  }
  input,
  textarea {
    background-color: rgba(68, 34, 0, .05);
    font-family: inherit;
    font-size: 1rem;
    width: 100%;
    padding: 1rem 1.25rem;
    border: 0;
    border-radius: .75rem;
    box-sizing: border-box;
    outline: 0;
    transition: box-shadow .25s;

    &:focus {
      box-shadow: 0 0 0 2px #dab1b1, 0 0 0 4px rgba(218, 177, 177, .5);
    }
    &::placeholder {
      color: rgba(68, 34, 0, .5);
    }
    &:focus::placeholder {
      color: rgba(68, 34, 0, .75);
    }
  }
  textarea {
    resize: none;
  }
  button {
    display: flex;
    width: fit-content;
    padding: 1rem 1.5rem 1rem 1.5rem;
    border: 0;
    border-radius: .75rem;
    background-color: rgba(68, 34, 0, .0375);
    color: inherit;
    text-decoration: none;
    font-family: inherit;
    font-size: 1rem;
    font-weight: 600;
    text-align: center;

    &:hover {
      background-color: rgba(68, 34, 0, .075);
    }
  }
  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }
  .contact-link {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .contact-link > a {
    color: inherit;
    text-decoration: none;
    transition: opacity .25s;

    &:hover {
      opacity: .5;
    }
  }
  .contact-links svg {
    opacity: .5;
  }
  @media screen and (max-width: 1310px) {
    .contact-area {
      width: 100%;
      padding-left: 2rem;
    }
  }
  @media screen and (max-width: 768px) {
    .contact-container {
      flex-direction: column;
    }
    .contact-area:nth-child(1) {
      border-right: 0;
      border-bottom: 1px solid rgba(0, 0, 0, .05);
    }
    .contact-area:nth-child(1),
    .contact-area:nth-child(2) {
      padding: 3rem 2rem;
    }
  }
  .description {
    line-height: 1.75;
  }
</style>